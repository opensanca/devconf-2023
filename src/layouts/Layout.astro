---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
    <link rel="canonical" href = "https://devconf.com.br" /> 
    <meta name="description" content="DevConf 2023, conferência de desenvolvimento do interior de São Paulo.">

    <meta property="og:title" content="DevConf 2023">
    <meta property="og:description" content="DevConf 2023, conferência de desenvolvimento do interior de São Paulo.">
    <meta property="og:type" content="website">
    <meta property="og:image" content="https://devconf.com.br/images/logo_full.png">
    <meta property="og:url" content="https://devconf.com.br/">
    <meta property="og:site_name" content="DevConf 2023">

    <script defer data-domain="devconf.com.br" src="https://plausible.io/js/script.js"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
