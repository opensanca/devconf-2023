          <ul
            role="list"
            class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-4"
          >
            {
              palestrantes.map((palestrante) => {
                return (
                  <li class="flex flex-col">
                    <img
                      class="aspect-[7/8] w-full object-cover"
                      src={palestrante.image}
                      alt={palestrante.name}
                    />
                    <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">
                      {palestrante.name}
                    </h3>
                    <p class="text-base leading-7 text-red-700">
                      {palestrante.role}
                    </p>
                    <p class="text-base leading-7 text-gray-600 flex-1">
                      {palestrante.about}
                    </p>
                    <ul role="list" class="mt-6 flex gap-x-6">
                      {palestrante.twitter && (
                        <li>
                          <a
