    <section id="opensanca">
      <div class="bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none md:flex">
            <div class="flex-shrink-0 mr-8 lg:hidden">
              <OpensancaLogo width="100px" height="auto" class="h-max" />
