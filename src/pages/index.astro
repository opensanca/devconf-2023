---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/images/logo.astro";
import palestrantes from "../dados/palestrantes.json";
import patrocinadores from "../dados/patrocinadores.json";
import { Picture } from "@astrojs/image/components";
import OpensancaLogo from "../components/images/opensanca-logo.astro";
import LogoWhite from "../components/images/logo-white.astro";
---

<script>
  let isMobileOpen = false;
  function toggleMobileMenu() {
    isMobileOpen = !isMobileOpen;
    let menu = document.getElementById("mobile-menu");
    if (isMobileOpen) {
      menu?.classList.remove("hidden");
    } else {
      menu?.classList.add("hidden");
    }
  }

  const hamburger = document.getElementById("mobile-menu-button");
  hamburger?.addEventListener("click", toggleMobileMenu);
</script>

<Layout title="DevConf 2023">
  <nav class="bg-white shadow fixed z-50 w-full">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
      <div class="relative flex h-16 justify-between">
        <div
          class="flex flex-1 items-center justify-center md:items-stretch md:justify-start"
        >
          <div class="inset-y-0 left-0 flex items-center md:hidden">
            <!-- Mobile menu button -->
            <button
              type="button"
              class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-red-700"
              aria-controls="mobile-menu"
              aria-expanded="false"
              id="mobile-menu-button"
            >
              <span class="sr-only">Open main menu</span>
              <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
          -->
              <svg
                class="block h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
              </svg>
              <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
          -->
              <svg
                class="hidden h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div
            class="flex flex-shrink-0 items-center justify-center flex-1 md:flex-none"
          >
            <Logo class="block h-8 w-auto" alt="Devconf" />
          </div>
          <div class="hidden md:ml-6 md:flex md:justify-around flex-1">
            <!-- Current: "border-red-700 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
            <a
              href="/#opensanca"
              class="font-semibold inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm text-gray-500 hover:border-gray-300 hover:text-gray-700"
              >Opensanca</a
            >
            <a
              href="/#palestrantes"
              class="font-semibold inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
              >Palestrantes</a
            >
            <a
              href="/#programacao"
              class="font-semibold inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
              >Programação</a
            >
            <a
              href="/#patrocinadores"
              class="font-semibold inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
              >Patrocinadores</a
            >
            <a
              href="/#local"
              class="font-semibold inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
              >Local</a
            >
          </div>
          <div class="flex ml-auto">
            <a
              href="/#ingresso"
              class="self-center rounded-md bg-red-700 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-red-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600"
              >Ingresso</a
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="space-y-1 pt-2 pb-4">
        <!-- Current: "bg-red-50 border-red-700 text-red-700", Default: "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700" -->
        <a
          href="/#devconf"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Devconf</a
        >
        <a
          href="/#opensanca"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Opensanca</a
        >
        <a
          href="/#palestrantes"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Palestrantes</a
        >
        <a
          href="/#programacao"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Programação</a
        >
        <a
          href="/#patrocinadores"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Patrocinadores</a
        >
        <a
          href="/#local"
          class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700"
          >Local</a
        >
      </div>
    </div>
